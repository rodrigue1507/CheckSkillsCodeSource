@model EditQuestionViewModel

<h2>Modification</h2>

@Html.HiddenFor(m => m.Id)
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<div class="form-group row ">
    @Html.LabelFor(m => m.DifficultyId, new { @class = "col-sm-1 col-form-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.DifficultyId, Model.Difficulties, new { @class = "form-control" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(m => m.TypeId, new { @class = "col-sm-1 col-form-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.TypeId, Model.QuestionTypes, new { @class = "form-control js-question-type-select" })
    </div>
   
</div>
<div class="form-group row">
    @Html.LabelFor(m => m.CategoryId, new { @class = "col-sm-1   col-form-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(m => m.Content, new { @class = "col-sm-1 col-form-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows="6" })
    </div>
</div>
<class class="form-group row">
    <div class="col-xs-1"></div>
    <div class="center-block  col-xs-10 ">
        <input type="submit" class="btn btn-default btn-block" value="Soumettre" />
    </div>
</class>