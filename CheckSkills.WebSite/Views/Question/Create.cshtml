@model EditQuestionViewModel
@{
    ViewData["Title"] = "Creation";
}

<div class="page-header">Creation-question</div>

@using (Html.BeginForm("Create", "Question", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="container">
            <div id="form-info">
                @Html.ValidationSummary(false, "", new { @class = "form-horizontal" })
                <div class="form-group row ">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.DifficultyId, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.DifficultyId, Model.Difficulties, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.TypeId, new { @class = "col-form-label" })
                    </div>
                    <div class="col-xs-8">
                        @Html.DropDownListFor(m => m.TypeId, Model.QuestionTypes, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.CategoryId, new { @class = "col-form-label" })
                    </div>
                    <div class="col-xs-8">
                        @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.Content, new { @class = "col-form-label" })
                    </div>
                    <div class="col-xs-8">
                        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "6" })
                    </div>
                </div>
            </div>

            <div id="form-action" >
                <div class="form-group row  col-xs-8">
                    <ul id="action">
                        <li>
                            <button type="submit" class="btn btn-info"> @Html.ActionLink("retour à la liste sans enregistrer", "List")</button>
                        </li>

                        <li>
                            <button type="submit" class="btn btn-info"><a>enregistrer et retour</a></button>
                        </li>

                        <li>
                            <buton type="submit" class="btn btn-info">@Html.ActionLink("enregistrer et nouveau", "SaveNewCreate", "Question", null, new { @class = "saveButton", onclick = "return false;" })</buton>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.saveButton').click(function () {
                $(this).closest('form')[0].action = "/sauvegarde-question";
                $(this).closest('form')[0].submit(); 
            });

            $('.saveButton').click(function () {
                $(this).toastr.success("enregistré")[0].action = "/sauvegarde-question";
                $(this).toastr.success("enregistré")[0].submit();
            });
        });

    </script>
}