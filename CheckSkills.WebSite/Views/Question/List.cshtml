@model IEnumerable<QuestionViewModel>

@{
    ViewData["Title"] = "Liste des questions";
    Layout = "_Layout";
}
@*<div>@Html.ActionLink("Créer une question", "Create", "Question", null, new { type = "button", @class = "btn btn-primary btn-lg btn-block shadow-lg" })</div>*@

    @using (Html.BeginForm("List", "Question", FormMethod.Post))
    {
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <h2 class="text-center pull-left" style="padding-left: 30px;"> <span class="glyphicon glyphicon-list-alt"> </span> Liste des questions </h2>
                    </div>
                    @*<div class="col-xs-9 col-sm-9 col-md-9">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="col-xs-12 col-md-4">
                                <label> Search </label>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" class="form-control input-md" name="search">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-md btn-warning"> <span class=" glyphicon glyphicon-search"></span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>*@
                </div>
            </div>

            <div class="panel-body table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center"> Contenu </th>
                            <th class="text-center"> Type </th>
                            <th class="text-center"> Catégorie </th>
                            <th class="text-center">Difficulté</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var questionVM in Model)
                        {
                        <tr class="edit" id="detail">
                            <td id="no" class="text-center"> @questionVM.Content</td>
                            <td id="name" class="text-center">  @questionVM.TypeName </td>
                            <td id="mobile" class="text-center">@questionVM.CategoryName</td>
                            <td id="mail" class="text-center">@questionVM.DifficultyLevel </td>
                            <td class="glyphicon glyphicon-edit">@Html.ActionLink("modifié","Edit", new { type = "button", @class = "btn btn-link ", questionId = questionVM.Id })</td>
                            <td class="glyphicon glyphicon-trash">@Html.ActionLink("supprimer","ConfirmDeleteOrNo", new { type = "button", @class = "btn btn-link ", questionId = questionVM.Id })</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="panel-footer panel-list-foot">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-8">
                        </div>
                        <div class="col-md-4">
                            <p class="muted pull-right"><strong> © CheckSkills </strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

