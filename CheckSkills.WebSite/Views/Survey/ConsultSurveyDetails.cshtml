@model SurveyDetailViewModel
@{
    ViewData["Title"] = "ConsultSurveyDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}




@using (Html.BeginForm("UpdateSurvey", "Survey", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="container-fluid">

        <div class="container">

            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="panel panel-default">
                        <div class="form-group row panel-body">
                            <div class="col-xs-2">
                                Titre :
                            </div>
                            <div class="col-xs-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control js-survey-name" })
                                <small id="nameHelp" class="form-text text-muted">modifier le titre</small>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>
                    </div>


                    <div class="panel panel-default">
                        <div class="form-group row panel-body">

                            <div class="col-xs-2">
                                commentaire :

                            </div>
                            <div class="col-xs-10" style="margin-bottom: 20px">
                                @Html.TextAreaFor(m => m.SurveyEvaluation, new { @class = "form-control", @rows = "8", @cols = "95" })
                            </div>

                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-body">
                            <button type="submit" class="btn btn-default  form-control " id="js-btn-save-comment">
                                @*<i class="glyphicon glyphicon-plus"></i>*@
                                enregistrer les modifications
                            </button>
                        </div>
                    </div>


                    @foreach (var questionGrouped in Model.SurveySelectedQuestions.GroupBy(q => q.CategoryName))
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading" style="background-color:#31333b; color:#fff"><h3>@questionGrouped.Key</h3></div>

                            <div class="panel-body">
                                @foreach (var questionVM in questionGrouped.ToList())
                                {
                                    i++;
                                    switch (questionVM.TypeName)
                                    {
                                        case "Question-Reponse":
                                            <div class="form-group row col-xs-12" style="margin-bottom:60px">
                                                <div class="question-design col-xs-12" style="border-bottom:1px solid lightgrey; margin-bottom:10px;">
                                                    <div class="row">
                                                        <div class="col-xs-8">
                                                            <h4 style="border-bottom:2px !important;">Question @i</h4>
                                                        </div>
                                                        <div class="col-xs-4 text-right">
                                                            <a data-toggle="popover" data-container="body" data-placement="right" data-content="Supprimer" href="@Url.Action("DeleteSurveydetail", "Survey",  new { questionId = questionVM.Id, surveyId = Model.Id })">
                                                                <span class="glyphicon glyphicon-remove-circle"></span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">

                                                    <div class="content-dedsign col-xs-12"><p>@questionVM.Content</p></div>
                                                    <div class="col-xs-12"><textarea class="form-control" readonly rows="4"></textarea></div>
                                                </div>

                                            </div>
                                            break;

                                        case "QCM":
                                            <div class="form-group row col-xs-12" style="margin-bottom:60px">
                                                <div class="question-design col-xs-12" style="border-bottom:1px solid lightgrey; margin-bottom:10px;">
                                                    <div class="row">
                                                        <div class="col-xs-8">
                                                            <h4>Question @i</h4>
                                                        </div>
                                                        <div class="col-xs-4 text-right">
                                                            <a data-toggle="popover" data-container="body" data-placement="right" data-content="Supprimer" href="@Url.Action("DeleteSurveydetail", "Survey",  new { questionId = questionVM.Id, surveyId = Model.Id })">
                                                                <span class="glyphicon glyphicon-remove-circle"></span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="content-dedsign col-xs-12"><p>@questionVM.Content</p></div>

                                                    <div class="col-xs-12">
                                                        @foreach (var answer in questionVM.QuestionAnswerList)
                                                        {
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" value="" id="answer_@answer.Id">
                                                                <label class="form-check-label" for="answer_@answer.Id">
                                                                    @answer.AnswerContent
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            break;
                                    }
                                }
                            </div>
                        </div>
                    }

                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <a class="btn btn-default" style="margin-bottom:35px;margin-left:785px" href="@Url.Action("AddQuestionSurvey", "Survey",
                                                                                                     new {selectedQuestionIds = Model.OriginalSurveySelectedQuestions, isAlreadyCreatedSurvey = true, surveyId = Model.Id})">
                            Ajouter une question
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </div>
                </div>

            </div>



            <div class="row col-xs-12 ">
                <button id="js-btn-goBack-survey-consult" class="btn btn-default col-xs-6">Retour à la liste</button>
                <button id="js-btn-print-survey" class="btn btn-default col-xs-6">imprimer</button>
            </div>


        </div>

    </div>
}

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#js-btn-goBack-survey-consult").click(function () {
                location.href = '@Url.Action("SurveyList", "Survey")';
            });
            $("#js-btn-print-survey").click(function () {
                var printUrl = '@Html.Raw(Url.Action("PrintSurvey", "Survey", new { surveySelectedQuestions = Model.OriginalSurveySelectedQuestions, surveyName = Model.Name }))';
                window.open(printUrl, '_blank');
            });



             @*$("#js-btn-save-comment").click(function () {
                location.href = '@Url.Action("", "Survey",  new { surveyId = Model.Id, comment = Model.SurveyEvaluation })'
            });*@

            $('[data-toggle="popover"]').popover();

            $(function () {
                $('.example-popover').popover({
                    container: 'body'
                })
            })
        });
    </script>

}


