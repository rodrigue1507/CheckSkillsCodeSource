@model CreateConfirmationSurveyViewModel
@{
    ViewData["Title"] = "Liste des questions";
    Layout = null;
    int i = 0;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Questionnaire</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <header class="">
        <div id="image-print"><img src="~/Images/fnac-darty.jpg" /></div>
    </header>

    <div>
        <div class="row">
            <div class="col-xs-6">
                <table class="table table-bordered table-condensed">
                    <tr>
                        <th>Navigation Front</th>
                    </tr>
                    <tr>
                        <th>Equipe : Navigation</th>
                    </tr>
                </table>
            </div>

            <div class="col-xs-6">
                <table class="table table-bordered table-condensed">
                    <tr>
                        <th>Date </th>
                        <td class="text-center">@Model.Date</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div><table class="table table-bordered table-condensed"><tr><th><h5 class="text-center">@Model.Name</h5></th></tr></table></div>

    <div>



        @foreach (var questionGrouped in Model.SurveySelectedQuestions.GroupBy(q => q.CategoryName))
        {
            @*class="panel-heading" style="background-color:#31333b; color:#fff; border-bottom:60px !important;border-radius: 5px;"*@
            <div class="row panel-heading" style="background-color:#31333b; color:#fff; margin-bottom:60px !important;border-radius: 5px;"><h4>@questionGrouped.Key</h4></div>
            
            <div class="row">
                @foreach (var questionVM in questionGrouped.ToList())
                {
                    i++;
                    switch (questionVM.TypeName)
                    {
                        case "Question-Reponse":
                            <div class="form-group row col-xs-12" style="margin-bottom:80px">
                                <div class="question-design col-xs-12" style="border-bottom:1px solid lightgrey; margin-bottom:10px;">
                                    <div class="row">
                                        <div class="col-xs-8">
                                            <h4 style="border-bottom:20px !important;">Question @i</h4>
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="content-dedsign col-xs-12"><p>@questionVM.Content</p></div>
                                    <div class="col-xs-12"><textarea class="form-control" readonly rows="4"></textarea></div>
                                </div>

                            </div>
                            break;

                        case "QCM":
                            <div class="form-group row col-xs-12" style="margin-bottom:80px">
                                <div class="question-design col-xs-12" style="border-bottom:1px solid lightgrey; margin-bottom:10px;">
                                    <div class="row">
                                        <div class="col-xs-8">
                                            <h4>Question @i</h4>
                                        </div>
                                        <div class="col-xs-4 text-right">

                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="content-dedsign col-xs-12"><p>@questionVM.Content</p></div>

                                    <div class="col-xs-12">
                                        @foreach (var answer in questionVM.QuestionAnswerList)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="answer_@answer.Id">
                                                <label class="form-check-label" for="answer_@answer.Id">
                                                    @answer.AnswerContent
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            break;
                    }
                }
            </div>

        }


    </div>

</body>
</html> 